@model InvoiceGenerater.Models.Format

@{
    ViewData["Title"] = "Details";
}

<div class="container vh-100 d-inline-block border border-secondary">
    <div class="container-fluid vh-25">
        <div class="text-center"><h3>Invoice</h3></div>
        <div>
            <label><b>Business Name:</b> Yolo Furnitures Pvt. Ltd. </label><br />
            <label><b>Business Address:</b> Shop No:3, 7th Street </label><br />
            <label><b>City:</b> Udaipur</label>&nbsp;
            <label><b>State:</b> Rajasthan</label><br />
            <label><b>Contact Number:</b> +91 82653 85485</label><br />
        </div>
        <div class="mt-3">
            <label><b>To:</b></label><br />
            <label><b>Business Name:</b> @Html.DisplayFor(model => model.Invoice.Client.ClientName)
            </label><br />
            <label><b>Business Address:</b> @Html.DisplayFor(model => model.Invoice.Client.Address) </label><br />
            <label><b>City:</b> @Html.DisplayFor(model => model.Invoice.Client.City)</label>&nbsp;
            <label><b>State:</b> @Html.DisplayFor(model => model.Invoice.Client.State)-@Html.DisplayFor(model => model.Invoice.Client.PinCode)</label><br />
            <label><b>GST Number:</b> @Html.DisplayFor(model => model.Invoice.Client.ClientGST)</label><br />
            <label><b>PAN Number:</b> @Html.DisplayFor(model => model.Invoice.Client.PANNumber)</label><br />
        </div>
        <div class="mt-3">
            <label><b>Invoice Number:</b> @Html.DisplayFor(model => model.Invoice.InvoiceId) </label><br />
            <label><b>Date:</b> @Html.DisplayFor(model => model.Invoice.CreatedDate)</label><br />
            <label><b>Due Date:</b> @Html.DisplayFor(model => model.Invoice.LastDate)</label><br />
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Discount</th>
                <th>Tax</th>
                <th>Amount</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
        </tbody>
    </table>
</div>
