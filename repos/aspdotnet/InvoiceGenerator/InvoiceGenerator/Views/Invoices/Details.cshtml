@*@model InvoiceGenerator.Models.InvoiceProduct*@

@{
    ViewData["Title"] = "Details";
}

<div class="container vh-100 d-inline-block border border-secondary">
    <div class="container-fluid vh-25">
        <div class="text-center"><h3>Invoice</h3></div>
        <div>
            <label><b>Business Name:</b> Yolo Furnitures Pvt. Ltd. </label><br />
            <label><b>Business Address:</b> Shop No:3, 7th Street </label><br />
            <label><b>City:</b> Udaipur</label>&nbsp;
            <label><b>State:</b> Rajasthan</label><br />
            <label><b>Contact Number:</b> +91 82653 85485</label><br />
        </div>
        <div class="mt-3">
            <label><b>To:</b></label><br />
            <label><b>Business Name:</b> @ViewBag.Invoice.ClientName
            </label><br />
            <label><b>Business Address:</b> @ViewBag.Invoice.Address </label><br />
            <label><b>City:</b> @ViewBag.Invoice.City - @ViewBag.Invoice.PinCode</label><br />
            <label><b>GST Number:</b> @ViewBag.Invoice.ClientGST</label><br />
            <label><b>PAN Number:</b> @ViewBag.Invoice.PANNumber</label><br />
        </div>
        <div class="mt-3">
            <label><b>Invoice Number:</b> @ViewBag.Invoice.InvoiceId </label><br />
            <label><b>Date:</b> @ViewBag.Invoice.CreatedDate</label><br />
            <label><b>Due Date:</b> @ViewBag.Invoice.LastDate</label><br />
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Discount</th>
                <th>Tax</th>
                <th>Amount</th>
            </tr>
        </thead>
        <tbody>
            @{
                decimal sum = 0;
            }
            @foreach(var item in ViewBag.InvoiceProduct)
            {
                <tr>
                    <td></td>
                    <td>@item.ProductName</td>
                    <td>@item.Price</td>
                    <td>@item.ProductQuantity</td>
                    <td>@item.Discount</td>
                    <td>@item.ProductTax</td>
                    <td>@item.Amount</td>
                </tr>
                sum = sum + @item.Amount;
            }
        </tbody>
    </table>
    <h4>Total Amount:</h4><B> @sum</B>
</div>

